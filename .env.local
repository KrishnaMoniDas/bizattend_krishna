NEXTAUTH_SECRET="generate-a-strong-secret-here" # Generate a strong secret: `openssl rand -hex 32`

# Admin credentials (for demo purposes with CredentialsProvider)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="password"

